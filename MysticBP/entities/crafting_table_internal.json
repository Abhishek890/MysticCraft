{
	"format_version": "1.8.0-beta.1",
	"minecraft:entity": {
		"description": {
			"identifier": "mystic:crafting_table_internal",
			"minecraft:runtime_identifier": {
				"id": "minecraft:villager"
			},
			"minecraft:spawn_egg": {
				"value": false
			},
			"minecraft:is_summonable": {
				"value": false
			},
			"minecraft:is_experimental": {
				"value": true
			}
		},
		"component_groups": {
			"solved:die": {
				"minecraft:explode": {
					"fuseLength": 0,
					"fuseLit": true,
					"power": 0
				}
			},
			"solved:disabled": {
				"minecraft:scale": {
					"value": 0
				},
				"minecraft:timer": {
					"looping": false,
					"randomInterval": false,
					"time": 2,
					"time_down_event": {
						"event": "solved:on_remove_disabled"
					}
				}
			},
			"solved:enabled": {
				"minecraft:scale": {
					"value": 1
				}
			}
		},

		"components": {
			"minecraft:type_family": {
				"family": ["crafting_table_internal"]
			},
			"minecraft:collision_box": {
				"height": 1.0,
				"width": 1.0
			},
			"minecraft:trade_table": {
				"display_name": "entity.villager.shepherd",
				"table": "trading/shepherd_trades.json"
			},
			"minecraft:behavior.trade_with_player": {
				"priority": 1
			},
			"minecraft:environment_sensor": {
				"on_environment": {
					"filters": {
						"test": "is_riding",
						"operator": "not"
					},
					"event": "solved:on_die"
				}
			},
			"minecraft:damage_sensor": [{
					"on_damage": {
						"filters": {
							"all_of": [{
									"test": "is_family",
									"subject": "other",
									"value": "player"
								},
								{
									"test": "has_component",
									"operator": "not",
									"value": "minecraft:behavior.send_event"
								}
							]
						},
						"event": "solved:on_disable"
					},
					"deals_damage": false
				},
				{
					"cause": "any",
					"deals_damage": false
				}
			],
			"minecraft:physics": {}
		},

		"events": {
			"solved:on_disable": {
				"add": {
					"component_groups": [
						"solved:disabled"
					]
				},
				"remove": {
					"component_groups": [
						"solved:enabled"
					]
				}
			},
			"solved:on_remove_disabled": {
				"add": {
					"component_groups": [
						"solved:enabled"
					]
				},
				"remove": {
					"component_groups": [
						"solved:disabled"
					]
				}
			},
			
			"solved:on_die": {
				"add": {
					"component_groups": [
						"solved:die"
					]
				}
			}
		}
	}
}